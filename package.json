{
  "name": "@aurodesignsystem/auro-config",
  "version": "0.0.0",
  "description": "This package contains the shared configuration for the development tools used by Auro.",
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "configs"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./biome": "./configs/biome.json",
    "./stylelint": "./configs/stylelint.json",
    "./releaserc": "./configs/releaserc.json",
    "./commitlint": "./configs/commitlint.json",
    "./lintstaged": "./configs/lintstaged.json"
  },
  "files": [
    "configs",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --fix --no-errors-on-unmatched",
    "prepare": "husky",
    "test": "echo \"No tests available\" && exit 0"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "lint-staged": "^16.1.6",
    "semantic-release": "^24.2.3",
    "stylelint": "^16.18.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.8.1",
    "@biomejs/biome": "2.0.6"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
